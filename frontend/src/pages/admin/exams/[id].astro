---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import ProtectedRoute from '../../../components/auth/ProtectedRoute';
import ExamEditorLoader from '../../../components/exams/ExamEditorLoader';
import ExamFilesManagerLoader from '../../../components/exams/ExamFilesManagerLoader';

export const prerender = false;

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/exams');
}
---

<AdminLayout title="Editar Examen" currentPath="/admin/exams">
  <ProtectedRoute client:load>
    <div class="max-w-5xl mx-auto">
      <!-- Header -->
      <div class="mb-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Editar Examen</h1>
            <p class="text-gray-600 mt-1">Los cambios crearán una nueva versión del examen</p>
          </div>
          <a
            href="/admin/exams"
            class="px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition"
          >
            ← Volver
          </a>
        </div>
      </div>
      
      <!-- Tabs -->
      <div class="mb-6 border-b border-gray-200">
        <nav class="-mb-px flex space-x-8">
          <button
            onclick="showTab('content')"
            id="tab-content-btn"
            class="border-b-2 border-blue-600 py-4 px-1 text-sm font-medium text-blue-600 transition-colors"
          >
            Contenido del Examen
          </button>
          <button
            onclick="showTab('files')"
            id="tab-files-btn"
            class="border-b-2 border-transparent py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300 transition-colors"
          >
            Archivos de Apoyo
          </button>
        </nav>
      </div>

      <!-- Tab Content -->
      <div id="content-panel">
        <ExamEditorLoader client:load examId={id} />
      </div>

      <div id="files-panel" class="hidden">
        <div class="bg-white rounded-lg shadow-sm p-6">
          <ExamFilesManagerLoader client:load examId={id} />
        </div>
      </div>
    </div>
  </ProtectedRoute>
</AdminLayout>

<script is:inline>
  function showTab(tabName) {
    // Obtener elementos
    const contentPanel = document.getElementById('content-panel');
    const filesPanel = document.getElementById('files-panel');
    const contentBtn = document.getElementById('tab-content-btn');
    const filesBtn = document.getElementById('tab-files-btn');

    if (tabName === 'content') {
      // Mostrar contenido
      contentPanel.classList.remove('hidden');
      filesPanel.classList.add('hidden');
      
      // Activar botón de contenido
      contentBtn.classList.remove('border-transparent', 'text-gray-500');
      contentBtn.classList.add('border-blue-600', 'text-blue-600');
      
      // Desactivar botón de archivos
      filesBtn.classList.remove('border-blue-600', 'text-blue-600');
      filesBtn.classList.add('border-transparent', 'text-gray-500');
    } else if (tabName === 'files') {
      // Mostrar archivos
      contentPanel.classList.add('hidden');
      filesPanel.classList.remove('hidden');
      
      // Activar botón de archivos
      filesBtn.classList.remove('border-transparent', 'text-gray-500');
      filesBtn.classList.add('border-blue-600', 'text-blue-600');
      
      // Desactivar botón de contenido
      contentBtn.classList.remove('border-blue-600', 'text-blue-600');
      contentBtn.classList.add('border-transparent', 'text-gray-500');
    }
  }
</script>
